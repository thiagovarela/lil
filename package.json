{
	"name": "lil-workspace",
	"private": true,
	"workspaces": [
		"packages/lil",
		"packages/web"
	],
	"scripts": {
		"dev": "bun run --filter lil dev",
		"web:dev": "bun run --filter lil-web dev",
		"web:build": "bun run --filter lil-web build",
		"check": "biome check .",
		"check:fix": "biome check --fix .",
		"format": "biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4"
	}
}
