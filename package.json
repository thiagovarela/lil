{
	"name": "clankie",
	"version": "0.2.1",
	"description": "A minimal personal AI assistant built on pi's SDK",
	"type": "module",
	"bin": {
		"clankie": "./src/cli.ts"
	},
	"files": [
		"src/",
		"web-ui-dist/",
		"package.json",
		"README.md"
	],
	"scripts": {
		"dev": "node --experimental-strip-types src/cli.ts",
		"build:web-ui": "cd web-ui && npm ci && npm run build && cd .. && rm -rf web-ui-dist && cp -r web-ui/.output/public web-ui-dist",
		"check": "biome check .",
		"check:fix": "biome check --fix .",
		"format": "biome format --write ."
	},
	"engines": {
		"node": ">=24.0.0"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.9",
		"@hono/node-ws": "^1.3.0",
		"@mariozechner/pi-ai": "^0.54.0",
		"@mariozechner/pi-coding-agent": "^0.54.0",
		"@slack/socket-mode": "^2.0.0",
		"@slack/web-api": "^7.0.0",
		"hono": "^4.12.3",
		"json5": "^2.2.3",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@types/node": "^22.10.2",
		"@types/ws": "^8.5.13",
		"tsx": "^4.21.0"
	}
}
